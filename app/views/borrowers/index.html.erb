<h1>Listing borrowers</h1>

<table>
  <thead>
    <tr>
      <th>Borrower</th>
      <th>Mortgage</th>
      <th>Borrower type</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Social security number</th>
      <th>Home phone</th>
      <th>Dob</th>
      <th>Years school</th>
      <th>Marriage status</th>
      <th>Number of dependents</th>
      <th>Home address line 1</th>
      <th>Home address line 2</th>
      <th>Own or rent</th>
      <th>Years of residence</th>
      <th>Mailing address line 1</th>
      <th>Mailing address line 2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrowers.each do |borrower| %>
      <tr>
        <td><%= borrower.borrower_id %></td>
        <td><%= borrower.mortgage_id %></td>
        <td><%= borrower.borrower_type %></td>
        <td><%= borrower.first_name %></td>
        <td><%= borrower.last_name %></td>
        <td><%= borrower.social_security_number %></td>
        <td><%= borrower.home_phone %></td>
        <td><%= borrower.dob %></td>
        <td><%= borrower.years_school %></td>
        <td><%= borrower.marriage_status %></td>
        <td><%= borrower.number_of_dependents %></td>
        <td><%= borrower.home_address_line_1 %></td>
        <td><%= borrower.home_address_line_2 %></td>
        <td><%= borrower.own_or_rent %></td>
        <td><%= borrower.years_of_residence %></td>
        <td><%= borrower.mailing_address_line_1 %></td>
        <td><%= borrower.mailing_address_line_2 %></td>
        <td><%= link_to 'Show', borrower %></td>
        <td><%= link_to 'Edit', edit_borrower_path(borrower) %></td>
        <td><%= link_to 'Destroy', borrower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

