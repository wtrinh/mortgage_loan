<h1>Listing employments</h1>

<table>
  <thead>
    <tr>
      <th>Employment</th>
      <th>Borrower</th>
      <th>Employer name</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Employed date from</th>
      <th>Employed date to</th>
      <th>Self employed flg</th>
      <th>Position</th>
      <th>Business phone</th>
      <th>Monthly income</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employments.each do |employment| %>
      <tr>
        <td><%= employment.employment_id %></td>
        <td><%= employment.borrower_id %></td>
        <td><%= employment.employer_name %></td>
        <td><%= employment.address_line_1 %></td>
        <td><%= employment.address_line_2 %></td>
        <td><%= employment.state %></td>
        <td><%= employment.zip_code %></td>
        <td><%= employment.employed_date_from %></td>
        <td><%= employment.employed_date_to %></td>
        <td><%= employment.self_employed_flg %></td>
        <td><%= employment.position %></td>
        <td><%= employment.business_phone %></td>
        <td><%= employment.monthly_income %></td>
        <td><%= link_to 'Show', employment %></td>
        <td><%= link_to 'Edit', edit_employment_path(employment) %></td>
        <td><%= link_to 'Destroy', employment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

